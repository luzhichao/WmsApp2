<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacher.activities.LabelSet"
    android:orientation="vertical">
    <com.linkingwin.elearn.common.widget.TitleView
        android:id="@+id/title_label_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/wide_line"
        android:background="@color/backgroundColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/right_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教学特点"/>
        <TextView
            android:id="@+id/tv_add_teach_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="添加"
            android:textColor="@color/blue"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hair_line"
        android:background="@color/backgroundColor"/>
    <TextView
        android:id="@+id/tv_peculiar_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wide_line"
        android:layout_marginBottom="@dimen/wide_line"
        android:textAlignment="center"
        android:visibility="gone"
        android:text="@string/noLabelSet"/>
    <GridView
        android:id="@+id/gv_peculiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"></GridView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/wide_line"
        android:background="@color/backgroundColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/right_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校标签"/>
        <TextView
            android:id="@+id/tv_add_school_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="添加"
            android:textColor="@color/blue"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hair_line"
        android:background="@color/backgroundColor"/>
    <TextView
        android:id="@+id/tv_school_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wide_line"
        android:layout_marginBottom="@dimen/wide_line"
        android:textAlignment="center"
        android:visibility="gone"
        android:text="@string/noLabelSet"/>
    <GridView
        android:id="@+id/gv_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"></GridView>
</LinearLayout>