<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".teacher.activities.SchoolTag">

    <com.linkingwin.elearn.common.widget.TitleView
        android:id="@+id/title_school_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titleWhite">
        <EditText
            android:id="@+id/et_school_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/right_margin"
            android:background="@color/backgroundColor"
            android:hint="输入曾任职的学校或机构"
            android:padding="@dimen/wide_line"
            android:textSize="@dimen/linesEditTextSize" />
    </LinearLayout>
</LinearLayout>