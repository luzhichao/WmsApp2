<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/left_margin"
    android:paddingRight="@dimen/right_margin"
    android:paddingTop="@dimen/top_margin"
    android:paddingBottom="@dimen/bottom_margin"
    android:layout_marginLeft="@dimen/left_margin"
    android:layout_marginRight="@dimen/right_margin"
    android:layout_marginTop="@dimen/wide_line">
    <TextView
        android:id="@+id/tv_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018.09"/>
    <TextView
        android:id="@+id/tv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_start_date"
        android:text="-"/>
    <TextView
        android:id="@+id/tv_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_line"
        android:text="2019.09"/>
    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_edit"
            android:text="编辑"/>
        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="@dimen/icon_right_size"
            android:layout_height="@dimen/icon_right_size"
            android:src="@drawable/arrows_right"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_grad_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_start_date"
        android:text="海南大学"/>
    <TextView
        android:id="@+id/tv_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_grad_school"
        android:text="学历"/>
    <TextView
        android:id="@+id/tv_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_grad_school"
        android:layout_toEndOf="@id/tv_degree"
        android:text="·"/>
    <TextView
        android:id="@+id/tv_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_grad_school"
        android:layout_toEndOf="@id/tv_dot"
        android:text="专业"/>

    <ToggleButton
        android:id="@+id/tb_switch"
        android:layout_width="@dimen/icon_big_thumb_size"
        android:layout_height="@dimen/icon_big_thumb_size"
        android:layout_alignBottom="@id/tv_major"
        android:layout_alignParentRight="true"
        android:background="@drawable/toggle_selector"
        android:textOn=""
        android:textOff=""
        android:checked="true"/>
</RelativeLayout>
</LinearLayout>
