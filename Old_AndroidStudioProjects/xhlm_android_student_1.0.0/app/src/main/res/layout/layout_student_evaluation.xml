<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/flag"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_width="4px"
        android:layout_height="30dp"
        android:background="@color/btn_pressed_green_solid"/>
    <TextView
        android:layout_alignLeft="@+id/flag"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/actionbar_title_size"
        android:text="@string/student_evaluation"/>

    <com.linkingwin.education.studyonline.common.base.view.CircleImageView
        android:id="@+id/civ_teacheravatar"
        android:layout_below="@+id/flag"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:src="@drawable/timg"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp10"
        android:id="@+id/lvl_teacher_bar1"
        android:layout_below="@+id/flag"
        android:layout_toRightOf="@+id/civ_teacheravatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_teacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="青青"/>
        <TextView
            android:layout_marginLeft="@dimen/dp10"
            android:id="@+id/tv_teacherDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/live_text_color_light"
            android:text="小学五年级"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lvl_teacher_bar2"
        android:layout_below="@+id/lvl_teacher_bar1"
        android:layout_toRightOf="@+id/civ_teacheravatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:textColor="@color/live_text_color_light"
            android:text="2018-08-25"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lvl_teacher_bar3"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_below="@+id/civ_teacheravatar"
        android:layout_toRightOf="@+id/civ_teacheravatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:paddingRight="@dimen/dp_20"
            android:text="第一次上朱老师的课，孩子感觉朱老师思路清晰，授课植入主题，让孩子清晰"/>
    </LinearLayout>
    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btn_show_all_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_all_comment"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lvl_teacher_bar3"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp5"
        app:qmui_radius="@dimen/dp5"/>
</RelativeLayout>