<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".student.activity.SearchSubjectActivity">
    <LinearLayout
        android:id="@+id/bar_search"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/notice_color"
        android:layout_height="50dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ToolBarTheme"
            toolbar:navigationIcon="@mipmap/ic_black_back">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/tv_search_text"
                    android:layout_width="260dp"
                    android:layout_height="35dp"
                    android:paddingTop="@dimen/dp5"
                    android:paddingLeft="25dp"
                    android:layout_centerVertical="true"
                    android:hint="输入老师/科目/年级"
                    android:layout_toRightOf="@+id/iv_xiala"
                    android:textSize="@dimen/detail_blue_bigger"
                    android:textColor="@color/black_deep"
                    android:background="@drawable/shape_search_radius_white"/>

                <com.qmuiteam.qmui.layout.QMUIButton
                    android:id="@+id/btn_search_subjects"
                    android:layout_toRightOf="@+id/tv_search_text"
                    android:background="@color/notice_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/detail_blue_bigger"
                    android:textColor="@color/btn_green_noraml"
                    android:text="搜索"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bar_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.linkingwin.education.studyonline.common.base.view.PopupDialogButton
            android:id="@+id/sel_orderlist"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="2px"
            android:layout_height="40dp"
            android:background="#dfdfdf"/>
        <com.linkingwin.education.studyonline.common.base.view.PopupDialogButton
            android:id="@+id/sel_gradelist"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="2px"
            android:layout_height="40dp"
            android:background="#dfdfdf"/>
        <com.linkingwin.education.studyonline.common.base.view.PopupDialogButton
            android:id="@+id/sel_subjectlist"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="2px"
            android:layout_height="40dp"
            android:background="#dfdfdf"/>
        <com.linkingwin.education.studyonline.common.base.view.PopupDialogButton
            android:id="@+id/sel_otherlist"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv_search_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
</LinearLayout>